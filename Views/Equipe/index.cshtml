@model Equipe
@{
    ViewData["Title"] = "Equipes";
}

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>

<form  class="cadastro" method="POST" action='@Url.Action("Cadastrar")' method="post" enctype="multipart/form-data">

    <div class="campo">
        <label>ID :</label>
        <input type="text" name="IdEquipe">
    </div>
    
    <div class="campo">
        <label>Nome :</label>
        <input type="text" name="Nome">
    </div>

    <div class="campo">
        <label>Imagem :</label>
        <input type="file" name="Imagem">
    </div>

        <button class="gradient btn" type="submit">Cadastrar</button>
    
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID:</th>
        <th>Nome:</th>
        <th>Foto:</th>
        <th>Ações:</th>
    </thead>
    <tbody>

        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>        
                <td>@equipe.IdEquipe</td>
                
                <td>@equipe.Nome</td>

                <td><img src="/img/Equipes/@equipe.Imagem" alt="Logo da equipe @equipe.Nome" width="70"></td>

                <td><a asp-area="Link para excluir alguma equipe" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>